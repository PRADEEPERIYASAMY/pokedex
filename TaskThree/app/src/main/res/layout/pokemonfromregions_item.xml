<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="366dp"
        android:layout_height="210dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#2196F3">
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pokemontwo"
                android:id="@+id/pokemon_from_region_image"
                android:transitionName="image_transaction"
                tools:targetApi="lollipop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="336dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="163dp"
            app:cardBackgroundColor="#00BCD4"
            app:cardCornerRadius="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text="Name"
                android:textSize="20dp"
                tools:ignore="RtlCompat"
                android:textStyle="bold"
                android:id="@+id/pokemon_from_region_name">

            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="147dp"
            android:layout_height="150dp"
            android:layout_marginLeft="203dp"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginStart="203dp">
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="9dp"
                app:cardCornerRadius="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="#Id-"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="73dp"
                android:textSize="40dp"
                android:text="Num"
                android:gravity="center_vertical"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:textStyle="bold"
                android:background="#9C27B0"
                android:id="@+id/pokemon_from_region_id"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</FrameLayout>